      <researchPrerequisite>CGearTechTPC</researchPrerequisite>
      <skillRequirements>
        <Crafting>14</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>200</Steel>
      <Plasteel>120</Plasteel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <CGearCtrlChip>1</CGearCtrlChip>

      <thingDefs>
        <li>Apparel_PowerArmorHelmet</li>
        <li>CGearCtrlChip</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Apparel_PowerArmorCGearHelmet>1</Apparel_PowerArmorCGearHelmet>
    </products>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
    <researchPrerequisite>CGearTech_Armour</researchPrerequisite>
    <unfinishedThingDef>UnfinishedTCGTechArmor</unfinishedThingDef>

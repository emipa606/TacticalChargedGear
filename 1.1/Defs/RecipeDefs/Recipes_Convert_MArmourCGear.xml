    <targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
      <li>TableCGear</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Apparel_PowerArmorHelmet</li>
          </thingDefs>
        </filter>

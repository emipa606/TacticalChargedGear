<Defs>
  <ThingDef Name="BaseArtilleryBuilding_CGearGrd" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Building/Security/TurretMortar_CGear_Base</texPath>

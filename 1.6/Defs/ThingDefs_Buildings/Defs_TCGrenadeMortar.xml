        <li>Artillery</li>
      </buildingTags>
    </building>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Mortars</li>
      <li>CGearTech_Turrets</li>
    </researchPrerequisites>
    <uiIconScale>1.1</uiIconScale>
    <techLevel>Ultra</techLevel>
  </ThingDef>
  <!--=============== Mortar turret ===============-->
  <ThingDef ParentName="BaseArtilleryBuilding_CGearGrd">
    <defName>Turret_CGear_Grenade</defName>
    <label>TC Grenade Mortar</label>
    <description>Based on the TC mortar but firing multiple grenades.</description>
    <techLevel>Ultra</techLevel>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps>
    <designationHotKey>Misc4</designationHotKey>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building>
      <turretGunDef>Artillery_Grenade_CGear</turretGunDef>
      <buildingTags>
        <li>Artillery_BaseDestroyer</li>
      </buildingTags>
    </building>
    <uiIconPath>Things/Building/Security/TurretGrenade_CGear_MenuIcon</uiIconPath>
    <uiIconScale>0.9</uiIconScale>
  </ThingDef>
  <ThingDef Name="BaseTCGrdArtilleryWeapon" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <label>artillery error</label>
    <graphicData>
      <texPath>Things/Building/Security/TurretGrenade_CGear_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <useHitPoints>false</useHitPoints>
    <equipmentType>Primary</equipmentType>
    <tickerType>Never</tickerType>
    <techLevel>Spacer</techLevel>
    <destroyOnDrop>True</destroyOnDrop>
    <tradeability>None</tradeability>
    <weaponTags>
      <li>Artillery</li>
    </weaponTags>
    <comps>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>TCGrenadeMortarAmmo</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>TCGrenadeMortarAmmo</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
  <ThingDef ParentName="BaseTCGrdArtilleryWeapon">
    <defName>Artillery_Grenade_CGear</defName>
    <label>TC Grenade Mortar</label>
    <description>Grenade Mortar. Lobs grenades over walls. Inaccurate but long-ranged.</description>
    <techLevel>Spacer</techLevel>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>TCGear.Verb_TCShootMulti</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>2.0</warmupTime>
        <forcedMissRadius>8</forcedMissRadius>
        <requireLineOfSight>false</requireLineOfSight>
        <minRange>19.9</minRange>
        <range>300</range>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <soundCast>Mortar_LaunchA</soundCast>
        <muzzleFlashScale>10</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
  </ThingDef>
</Defs>
